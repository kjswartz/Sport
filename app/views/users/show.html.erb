<div class="page-header">
  <ul class="nav nav-pills pull-right" style="padding-right:60px;">
    <li class="active">
      <%= link_to "Home", root_path %>
    </li>
  </ul>
  <h1><%= @user.name %> //<small><%= @user.email %></small></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4">
    <%= image_tag @user.avatar_url %>
    <p>
      <strong>Teams:</strong>
    </p>
    <ul>
      <% @user.teams.each do |team| %>
          <li class="active"><%= link_to team.name, team %></li>
      <% end %>
    </ul>
  </div>
</div>

<nav class="navbar navbar-fixed-bottom container">
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Back', users_path %> |
    <%= link_to 'Home', root_path %>
</nav>
