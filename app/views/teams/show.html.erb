<div class="page-header">
  <h1><%= @team.name %> <small>// <%= @team.league.name %> League</small></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-3">
    <p>
      <strong>Skill Level:</strong>
      <%= @team.league.skill %>
    </p>
    <p>
      <strong>Number of Players:</strong>
      <%= @team.players.count %>
    </p>
  </div>

  <div class="col-md-3 col-md-ofset-1">
    <ul>
      <% @team.players.each do |player| %>
          <li class="active"><%= link_to player.name, player %></li>
      <% end %>
    </ul>
  </div>


</div>

<nav class="navbar navbar-fixed-bottom">
  <div class="container">
    <%= link_to 'League', @team.league %> |
    <%= link_to 'Edit', edit_team_path(@team) %> |
    <%= link_to 'List All', teams_path %> |
    <%= link_to 'Home', root_path %>
  </div>
</nav>
