<div class="page-header">
  <ul class="nav nav-pills pull-right" style="padding-right:60px;">
    <li class="active">
      <%= link_to "Home", root_path %>
    </li>
  </ul>
  <h1><%= @player.name %></h1>
</div>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4">
    <%= image_tag @player.avatar_url %>
    <p>
      <strong>Teams:</strong>
    </p>
    <ul>
      <% @player.teams.each do |team| %>
          <li class="active"><%= link_to team.name, team %></li>
      <% end %>
    </ul>
  </div>
</div>




<nav class="navbar navbar-fixed-bottom container">
    <%= link_to 'Edit', edit_player_path(@player) %> |
    <%= link_to 'List All', players_path %> |
    <%= link_to 'Home', root_path %>
</nav>
